<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirm_Booking"
    android:background="@color/orange">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/g1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="start">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backimg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:fontFamily="@font/semibold"
                android:textColor="@color/black"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_notifications_none_24"/>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="700dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background="@color/black"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/cardbg"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/g1"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:fontFamily="@font/interbold"
            android:textSize="32dp"
            app:layout_constraintTop_toTopOf="@id/gi1"
            app:layout_constraintStart_toStartOf="@id/gih1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carpooling Details"
            android:fontFamily="@font/interbold"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="@id/gi2"
            app:layout_constraintStart_toStartOf="@id/gih1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/gi3"
            app:layout_constraintStart_toStartOf="@id/gih1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Number:"
                android:fontFamily="@font/regular"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2948934045"
                android:fontFamily="@font/regular"
                android:textSize="16dp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/gi4"
            app:layout_constraintStart_toStartOf="@id/gih1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination:"
                android:fontFamily="@font/regular"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Clark City, Pampanga"
                android:fontFamily="@font/regular"
                android:textSize="16dp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/gi5"
            app:layout_constraintStart_toStartOf="@id/gih1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Event:"
                android:fontFamily="@font/regular"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enhypen World tour 'Fate'"
                android:fontFamily="@font/regular"
                android:textSize="16dp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/gi6"
            app:layout_constraintStart_toStartOf="@id/gih1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure:"
                android:fontFamily="@font/regular"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="February 3, 2024 - 8:00am"
                android:fontFamily="@font/regular"
                android:textSize="16dp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/gi7"
            app:layout_constraintStart_toStartOf="@id/gih1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Driver:"
                android:fontFamily="@font/regular"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roel Lopez"
                android:fontFamily="@font/regular"
                android:textSize="16dp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payement"
            android:fontFamily="@font/interbold"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="@id/gi8"
            app:layout_constraintStart_toStartOf="@id/gih1"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/gi9"
            app:layout_constraintStart_toStartOf="@id/gih1"
            app:layout_constraintEnd_toStartOf="@id/gih2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pax:"
                android:fontFamily="@font/regular"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bgll"
                android:foregroundGravity="center"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/minus"
                    android:background="@drawable/minusbg"
                    android:padding="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:fontFamily="@font/regular"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add"
                    android:background="@drawable/addbg"
                    android:padding="2dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ig10"
            app:layout_constraintStart_toStartOf="@id/gih1"
            app:layout_constraintEnd_toStartOf="@id/gih2"
            android:orientation="horizontal"
            android:foregroundGravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal:"
                android:fontFamily="@font/regular"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱"
                android:fontFamily="@font/regular"
                android:textSize="19dp"
                android:textColor="@color/gray"
                app:layout_constraintEnd_toStartOf="@id/subtol"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/subtol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:fontFamily="@font/regular"
                android:textSize="16dp"
                android:textColor="@color/gray"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/gi11"
            app:layout_constraintStart_toStartOf="@id/gih1"
            app:layout_constraintEnd_toStartOf="@id/gih2"
            android:orientation="horizontal"
            android:foregroundGravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:fontFamily="@font/semibold"
                android:textSize="20dp"
                android:textColor="@color/orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱"
                android:fontFamily="@font/regular"
                android:textSize="19dp"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toStartOf="@id/totalid"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/totalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:fontFamily="@font/regular"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="*The payment will be paid upon the day of the departure"
            android:fontFamily="@font/regular"
            android:textSize="14dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@id/gi12"
            app:layout_constraintStart_toStartOf="@id/gih1"
            app:layout_constraintEnd_toEndOf="@id/gih2"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/gi13"
            app:layout_constraintStart_toStartOf="@id/gih1"
            app:layout_constraintEnd_toEndOf="@id/gih2"
            android:backgroundTint="@color/orange"
            android:text="Book Now"
            android:fontFamily="@font/interbold"
            android:foregroundGravity="center"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".10"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".160"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".25"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".34"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".43"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".52"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".62"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".68"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ig10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".73"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".79"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".83"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gi13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".90"/>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gih1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gih2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".95"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".10"/>

</androidx.constraintlayout.widget.ConstraintLayout>